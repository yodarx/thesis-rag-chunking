{
  "embedding_model": "all-MiniLM-L6-v2",
  "retriever_type": "faiss",
  "top_k": 20,
  "input_file": "data/preprocessed/gold.jsonl",
  "experiments": [
    {
      "name": "recursive_512_64",
      "function": "chunk_recursive",
      "params": { "chunk_size": 512, "chunk_overlap": 64 }
    },
    {
      "name": "fixed_512_0",
      "function": "chunk_fixed_size",
      "params": { "chunk_size": 512, "chunk_overlap": 0 }
    },
    {
      "name": "fixed_512_128",
      "function": "chunk_fixed_size",
      "params": { "chunk_size": 512, "chunk_overlap": 128 }
    },
    {
      "name": "sentence_s5",
      "function": "chunk_by_sentence",
      "params": { "sentences_per_chunk": 5 }
    }
  ]
}

